<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvMapTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/tvMarkersLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Singapore Itinerary" />

    <TextView
        android:id="@+id/tvMarkersCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvMarkersLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvMarkersLabel"
        app:layout_constraintVertical_bias="1.0"
        tools:text="10" />

    <TextView
        android:id="@+id/tvMarkersLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/markers"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/tvMapTitle"
        app:layout_constraintEnd_toStartOf="@+id/tvMarkersCount"
        app:layout_constraintTop_toTopOf="@+id/tvMapTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>